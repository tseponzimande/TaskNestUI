@page "/login"

<RadzenCard class="mx-auto" style="max-width: 400px;">
    <h3 class="mb-4">Login</h3>

    <RadzenTemplateForm TItem="LoginDto" Data="@loginModel" Submit="@UserLogin">
        <RadzenFormField Text="Email" Variant="Variant.Outlined">
            <RadzenTextBox @bind-Value="@loginModel.Email" Name="Email" />
            <RadzenRequiredValidator Component="Email" Text="Email is required" />
            <RadzenEmailValidator Component="Email" Text="Please enter a valid email" />
        </RadzenFormField>

        <RadzenFormField Text="Password" Variant="Variant.Outlined" class="mt-3">
            <RadzenPassword @bind-Value="@loginModel.Password" Name="Password" />
            <RadzenRequiredValidator Component="Password" Text="Password is required" />
        </RadzenFormField>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Login" ButtonStyle="ButtonStyle.Primary" />
            <RadzenLink Path="/register" Text="Don't have an account? Register" />
        </div>
    </RadzenTemplateForm>
</RadzenCard>
