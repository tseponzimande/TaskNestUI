@using Microsoft.AspNetCore.Components.Authorization

<RadzenStack AlignItems="AlignItems.Stretch">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
        
        <AuthorizeView>
            <Authorized>
                <RadzenPanelMenuItem Text="My Boards" Icon="dashboard" Path="/boards" />
                <RadzenPanelMenuItem Text="Profile" Icon="person" Path="/profile" />
                <RadzenPanelMenuItem Text="Logout" Icon="logout" Click="@Logout" />
            </Authorized>
            <NotAuthorized>
                <RadzenPanelMenuItem Text="Login" Icon="login" Path="/login" />
                <RadzenPanelMenuItem Text="Register" Icon="person_add" Path="/register" />
            </NotAuthorized>
        </AuthorizeView>
    </RadzenPanelMenu>
</RadzenStack>




